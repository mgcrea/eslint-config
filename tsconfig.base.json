{
  "extends": ["@tsconfig/node-lts", "@tsconfig/strictest", "@tsconfig/esm"],
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": ["src", "test"]
}
