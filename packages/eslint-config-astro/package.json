{
  "name": "@mgcrea/eslint-config-astro",
  "version": "0.12.18",
  "description": "Eslint config for Astro websites",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/eslint-config",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "start": "eslint --config dist/index.js",
    "build": "tsup ./src --clean",
    "prettify": "prettier --write src/ test/",
    "spec": "vitest --run",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "typecheck": "tsc --noEmit",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@mgcrea/eslint-config-react": "0.12.18",
    "eslint-plugin-astro": "^1.3.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.48.0",
    "@tsconfig/node-lts": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.3",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.5"
  }
}
