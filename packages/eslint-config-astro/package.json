{
  "name": "@mgcrea/eslint-config-astro",
  "version": "0.10.0",
  "description": "Eslint config for Astro websites",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/eslint-config",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js"
    },
    "./test": {
      "require": "./dist/test/index.js"
    }
  },
  "scripts": {
    "start": "eslint --config dist/index.js",
    "build": "tsup ./src --clean",
    "prettify": "prettier --write src/ test/",
    "spec": "vitest --run",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "typecheck": "tsc --noEmit",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@mgcrea/eslint-config-react": "0.10.0",
    "eslint-plugin-astro": "^0.33.1"
  },
  "devDependencies": {
    "@tsconfig/esm": "^1.0.4",
    "@tsconfig/node-lts": "^20.1.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint": "^8.56.6",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
