{
  "name": "@mgcrea/eslint-config-react",
  "version": "0.14.0",
  "description": "Eslint config for React applications",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/eslint-config",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "start": "eslint --config dist/index.js",
    "build": "rimraf dist/; tsup ./src",
    "prettify": "prettier --write src/ test/",
    "spec": "vitest --run",
    "lint": "eslint src/ test/ --report-unused-disable-directives --max-warnings 0",
    "prettycheck": "prettier --check src/ test/",
    "typecheck": "tsc --noEmit",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@eslint/compat": "^2.0.0",
    "@vitest/eslint-plugin": "^1.4.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-testing-library": "^7.13.4",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.47.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.0",
    "@tsconfig/node-lts": "^22.0.3",
    "@tsconfig/strictest": "^2.0.8",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "react": "^19.2.0",
    "rimraf": "^6.1.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  }
}